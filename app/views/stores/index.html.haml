%h1.header
  Listado de Tiendas

%br
%br
%br
%br
%table.table
  %th Nombre
  %th Ciudad
  %th País
  %th Teléfono de contacto
  %th Correo Electrónico
  %th Zona Horaría
  %th
    - @stores.each do |store|
      %tr
        %td
          = link_to store.name, store
        %td
          = store.city
        %td
          = store.country
        %td
          = store.phone
        %td
          = store.address
        %td
          = store.timezone
        %td
          = link_to 'Editar', edit_store_path(store), class: 'btn btn-raised btn-primary'
          = link_to 'Eliminar', store, method: :delete, data: { confirm: '¿Estás seguro que quieres eliminar esta tienda?' }, class: 'btn btn-raised btn-danger'

= link_to 'Nuevo Proveedor', new_store_path, class: 'btn btn-raised btn-success'
