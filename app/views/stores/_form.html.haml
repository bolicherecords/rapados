.container
	= form_for(@store) do |f|
		%div
			= f.label :name
			= f.text_field :name, :maxlength => 12, placeholder: "Ejemplo: Nombre Proveedor Anal",class: "form-control", autofocus: true
			= f.label :city
			= f.text_field :city, placeholder: "Ejemplo: Proveedor",class: "form-control", autofocus: true
			= f.label :country
			= f.text_field :country, placeholder: "Ejemplo: Pais",class: "form-control", autofocus: true
			= f.label :phone
			= f.text_field :phone, placeholder: "Ejemplo: Telefono Contacto",class: "form-control", autofocus: true
			= f.label :address
			= f.text_field :address, placeholder: "Ejemplo: Direcci√≥n",class: "form-control", autofocus: true
		%div
			%br
				= f.submit "Guardar", class: "btn btn-success"
				= link_to 'Volver', stores_path , class: "btn btn-link"
