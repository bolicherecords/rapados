.container
	= form_for(@store) do |f|
		%div{ class: 'form-group label-floating'}
			= f.label 'Nombre', class: "form-label"
			= f.text_field :name, class: "form-control", autofocus: true
		%div{ class: 'form-group label-floating'}
			= f.label 'Ciudad', class: "form-label"
			= f.select :city, city_list, {:selected => city_list.first[0]}, {:class =>'form-control '}
		%div{ class: 'form-group label-floating'}
			= f.label 'Teléfono contacto', class: "form-label"
			= f.text_field :phone, class: "form-control", autofocus: true
		%div{ class: 'form-group label-floating'}
			= f.label 'Correo electrónico', class: "form-laber"
			= f.text_field :address, class: "form-control", autofocus: true
		%div
			%br
				= f.submit "Guardar", class: "btn btn-raised btn-success"
				= link_to 'Volver', stores_path , class: "btn btn-link"
