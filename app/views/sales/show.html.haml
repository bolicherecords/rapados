%h1.header
	Agregar Productos	
%br
%br
.container
	%div
		%p
			Local:
			= @sale.store.name
		%p
			Cliente:
			= @sale.client.name
		%p
			Cajero:
			= @sale.user.email
	%hr

	%div
		%br
			= form_tag(sale_details_path(sale: @sale), :method => "post") do
				= text_field_tag :barcode, params[:barcode], placeholder: "Ingrese Codigo de Barras", autofocus: true
				= submit_tag "Agregar", class: "btn btn-success"
				= submit_tag "Finalizar", class: "btn btn-danger"

	.h4 Productos
	%div
		%br
		%table.table
			%th Nombre
			%th Descripci√≥n
			%th
			- @sale.sale_details.each do |sale_detail|
				%tr
					%td
						= sale_detail.product.name
					%td
						= sale_detail.product.description