.title
  Listado de Clientes
%hr
.row
  .col-md-4
    = link_to new_customer_path, class: 'btn btn-raised btn-success' do
      %i.fa.fa-plus-circle
      Nuevo Cliente
    = link_to desactivated_customers_path(), class: 'btn btn-info' do
      %i.fa.fa-edit
      Clientes Desactivados
  .col-md-8
    = form_tag(customers_path(), :method => "get", id: "search-form") do
      .row
        .col-md-8
          = text_field_tag :query, params[:query], placeholder: "Ingrese nombre, Descripción, Unidad o Código de barras del cliento", autofocus: true, class: "form-control"
        .col-md-4
          = submit_tag "Buscar", class: "btn btn-info"
%br
%br
%table.table
  %th Nombre
  %th Teléfono de Contacto
  %th Correo Electrónico
  %th
    - @customers.each do |customer|
      %tr
        %td
          = link_to customer.name, customer
        %td
          = customer.phone
        %td
          = customer.email
        %td
          = link_to 'Desactivar', edit_customer_path(customer, origin: "DESACTIVATE"), class: 'btn btn-raised btn-warning'
          = link_to 'Editar', edit_customer_path(customer), class: 'btn btn-raised btn-primary'
          = link_to customer, method: :delete, data: { confirm: '¿Estás seguro que quieres eliminar este cliente?' }, class: 'btn btn-raised btn-danger' do
            %i.fa.fa-trash-o
            Eliminar
