.container
	= form_for(@plan) do |f|
		%div{ class: 'form-group label-floating'}
			= f.label 'Nombre', class: 'control-label'
			= f.text_field :name, class: "form-control", autofocus: true
		%div{ class: 'form-group label-floating'}
			= f.label 'Precio', class: 'control-label'
			= f.text_field :price, class: "form-control", autofocus: true
			
		%div
			%br
				= f.submit "Guardar", class: "btn btn-raised btn-success"
				= link_to 'Volver', plans_path , class: "btn btn-link"