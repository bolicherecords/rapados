.title
  Listado de Tarifas
%hr
.row
  .col-md-4.col-xs-5
    = link_to new_plan_path, class: 'btn btn-raised btn-success' do
      %i.fa.fa-plus-circle
      Nuevo Plan
    = link_to desactivated_plans_path(), class: 'btn btn-info' do
      %i.fa.fa-edit
      Planes Desactivados
  .col-md-8.col-xs-7
    = form_tag(plans_path(), :method => "get", id: "search-form") do
      .row
        .col-md-7.col-md-offset-4.col-xs-10
          = text_field_tag :query, params[:query], placeholder: "Ingrese nombre del plan", autofocus: true, class: "form-control"
        .col-md-1.col-xs-2
          = submit_tag "Buscar", class: "btn btn-info pull-right"

%br
%br
%table.table
  %th Nombre
  %th Precio
  %th
    - @plans.each do |plan|
      %tr
        %td
          = link_to plan.name, plan
        %td
          = link_to plan.price
        %td
          = link_to 'Desactivar', edit_plan_path(plan, origin: "DESACTIVATE"), class: 'btn btn-raised btn-warning'
          = link_to 'Editar', edit_plan_path(plan), class: 'btn btn-raised btn-primary'
          = link_to plan, method: :delete, data: { confirm: '¿Estás seguro que quieres eliminar este plan?' }, class: 'btn btn-raised btn-danger' do
            %i.fa.fa-trash-o
            Eliminar
