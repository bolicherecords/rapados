.title
  Listado de Egresos
  .title_label
    .label.label-warning
      Anulados
%hr
.row
  .col-md-4.col-xs-5
    = link_to expenses_path(), class: 'btn btn-info' do
      %i.fa.fa-edit
      Egresos Activos
  .col-md-8.col-xs-7
    = form_tag(cancelled_expenses_path(), :method => "get", id: "search-form") do
      .row
        .col-md-7.col-md-offset-4.col-xs-10
          = text_field_tag :query, params[:query], placeholder: "Ingrese nombre o precio del egreso", autofocus: true, class: "form-control"
        .col-md-1.col-xs-2
          = hidden_field_tag :status, Expense::STATUS_CANCELLED
          = submit_tag "Buscar", class: "btn btn-info pull-right"
%br
%br
%table.table
  %th Local
  %th Nombre
  %th Precio
  %th
    - @expenses.each do |expense|
      %tr
        %td
          = link_to expense.store.name, expense.store
        %td
          = expense.name
        %td
          = expense.price
        %td
          = link_to expense, method: :delete, data: { confirm: '¿Estás seguro que quieres eliminar este egreso?' }, class: 'btn btn-raised btn-danger' do
            %i.fa.fa-trash-o
            Eliminar
