.container
	= form_for(@provider) do |f|
		%div
			= f.label :name
			= f.text_field :name, :maxlength => 12, placeholder: "Nombre",class: "form-control", autofocus: true
			= f.label :phone
			= f.text_field :phone, placeholder: "Teléfono de contacto",class: "form-control", autofocus: true
			= f.label :email
			= f.text_field :email, placeholder: "Correo electrónico",class: "form-control", autofocus: true
		%div
			%br
				= f.submit "Guardar", class: "btn btn-success"
				= link_to 'Volver', providers_path , class: "btn btn-link"
