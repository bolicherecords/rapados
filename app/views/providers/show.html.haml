.row
  .col-md-3
    .panel.panel-default
      .panel-heading
        Panel Control
      .panel-body
        = link_to edit_provider_path(@provider), class: 'btn btn-link' do
          %i.fa.fa-edit
          Editar Proveedor
        = link_to @provider, method: :delete, data: { confirm: '¿Estás seguro que quieres eliminar este proveedor?' }, class: 'btn btn-raised btn-link' do
          %i.fa.fa-trash-o
          Eliminar Proveedor

  .col-md-9
    %h2
      Proveedor:
      = @provider.name
    %hr
    %p
      %strong
        Correo Electrónico:
      = @provider.email
    %p
      %strong
        teléfono de contacto
      = @provider.phone
