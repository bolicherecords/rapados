= form_for(@cash_flow) do |f|
	- if current_user.is_admin?
		%div{ class: 'form-group label-floating'}
			= f.label "Local", class: "title_label"
			= f.select(:store_id, Store.all.order("name ASC").collect {|c| [c.name, c.id]}, {}, {:prompt => 'Seleccione Local', class: 'form-control'})
	%div{ class: 'form-group label-floating'}
		= f.label "Fecha Inicio", class: "title_label"
		= f.text_field(:start_at, class: 'form-control')
	%div{ class: 'form-group label-floating'}
		= f.label "Fecha TÃ©rmino", class: "title_label"
		= f.text_field(:end_at, class: 'form-control')

	%div
		%br
			= f.submit "Guardar", class: "btn btn-success"
			= link_to 'Volver', cash_flows_path , class: "btn btn-link"