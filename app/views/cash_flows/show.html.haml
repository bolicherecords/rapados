.row
  .col-md-3
    .panel.panel-default
      .panel-heading
        Panel Control
      .panel-body
        = link_to cash_flow_report_cash_flows_path(@cash_flow), class: 'btn btn-link' do
          %i.fa.fa-calculator
          Arqueo de Caja
        %br
        = link_to edit_cash_flow_path(@cash_flow), class: 'btn btn-link' do
          %i.fa.fa-edit
          Editar Caja
        %br
        = link_to @cash_flow, method: :delete, data: { confirm: '¿Estás seguro que quieres eliminar este cliente?' }, class: 'btn btn-raised btn-link' do
          %i.fa.fa-trash-o
          Eliminar Caja
        %br
        = link_to :back, class: 'btn btn-raised btn-link' do
          %i.fa.fa-arrow-left
          Volver

  .col-md-9
    .title
      Local:
      = @cash_flow.store.name
    %br
    %br
    %table.table
      %tr
        %td
          %strong
            Fecha Inicio:
        %td
          = @cash_flow.start_at
      %tr
        %td
          %strong
            Fecha Término
        %td
          = @cash_flow.end_at


  .col-md-9
    %ul#pills-tab.nav.nav-pills.mb-3{:role => "tablist"}
      %li.nav-item.active
        %a#pills-sales-tab.nav-link{"aria-controls" => "pills-sales", "aria-selected" => "true", "data-toggle" => "pill", :href => "#pills-sales", :role => "tab"}
          Ventas
      %li.nav-item
        %a#pills-purchases-tab.nav-link{"aria-controls" => "pills-purchases", "aria-selected" => "false", "data-toggle" => "pill", :href => "#pills-purchases", :role => "tab"}
          Compras
      %li.nav-item
        %a#pills-expenses-tab.nav-link{"aria-controls" => "pills-expenses", "aria-selected" => "false", "data-toggle" => "pill", :href => "#pills-expenses", :role => "tab"}
          Gastos
      %li.nav-item
        %a#pills-dispatches-origin-tab.nav-link{"aria-controls" => "pills-dispatches-origin", "aria-selected" => "false", "data-toggle" => "pill", :href => "#pills-dispatches-origin", :role => "tab"}
          Despachos Salida
      %li.nav-item
        %a#pills-dispatches-destination-tab.nav-link{"aria-controls" => "pills-dispatches-destination", "aria-selected" => "false", "data-toggle" => "pill", :href => "#pills-dispatches-destination", :role => "tab"}
          Despachos Entrada
      %li.nav-item
        %a#pills-contributions-tab.nav-link{"aria-controls" => "pills-contributions", "aria-selected" => "false", "data-toggle" => "pill", :href => "#pills-contributions", :role => "tab"}
          Aportes
    #pills-tabContent.tab-content
      #pills-sales.tab-pane.fade.active.in{"aria-labelledby" => "pills-sales-tab", :role => "tabpanel"}
        = render 'sales'
      #pills-purchases.tab-pane.fade{"aria-labelledby" => "pills-purchases-tab", :role => "tabpanel"}
        = render 'purchases'
      #pills-expenses.tab-pane.fade{"aria-labelledby" => "pills-expenses-tab", :role => "tabpanel"}
        = render 'expenses'
      #pills-dispatches-origin.tab-pane.fade{"aria-labelledby" => "pills-dispatches-origin-tab", :role => "tabpanel"}
        = render 'dispatches_origin'
      #pills-dispatches-destination.tab-pane.fade{"aria-labelledby" => "pills-dispatches-destination-tab", :role => "tabpanel"}
        = render 'dispatches_destination'
      #pills-contributions.tab-pane.fade{"aria-labelledby" => "pills-contributions-tab", :role => "tabpanel"}
        = render 'contributions'
