.title-center
	Arqueo de Caja
%hr

%div
	.container
		- @stores.where(type: Store::TYPE_MASTER).each do |s|
			%div
				.col-md-6
					%h4.bs-callout.bs-callout-primary.text-center
						= s.name

					.panel.panel-primary
						.panel-heading.subtitle-center
							.panel-title
								= number_to_currency(@cash_flow.total_purchases(s), :unit => "$", :separator => ",", :delimiter => ".")

						%table.table.panel-body
							%tr.text-right
								%th Despachos
								%td
									= number_to_currency(@cash_flow.total_origin_dispatches(s), :unit => "$", :separator => ",", :delimiter => ".")
							%tr.text-right
								%th Gastos
								%td
									= number_to_currency(@cash_flow.total_expenses(s), :unit => "$", :separator => ",", :delimiter => ".")
							%tr.text-right
								%th Total
								%td
									%strong
									= number_to_currency(@cash_flow.total_master(s), :unit => "$", :separator => ",", :delimiter => ".")

		- @stores.where(type: Store::TYPE_SLAVE).each do |s|
			%div
				.col-md-6
					%h4.bs-callout.bs-callout-primary.text-center
						= s.name

					.panel.panel-primary
						.panel-heading.subtitle-center
							.panel-title
								= "Ventas : {#{number_to_currency(@cash_flow.total_sales(s), :unit => "$", :separator => ",", :delimiter => ".")}}"

						%table.table.panel-body
							%tr.text-right
								%th Aportes
								%td
									= number_to_currency(@cash_flow.total_contributions(s), :unit => "$", :separator => ",", :delimiter => ".")
							%tr.text-right
								%th Gastos
								%td
									= number_to_currency(@cash_flow.total_expenses(s), :unit => "$", :separator => ",", :delimiter => ".")
							%tr.text-right
								%th Total
								%td
									%strong
										= number_to_currency(@cash_flow.total_slave(s), :unit => "$", :separator => ",", :delimiter => ".")

.container
	%div
		.col-md-offset-4.col-md-4
			- saldo = @cash_flow.saldo
			.panel{:class=> ("#{ saldo >= 0 ? "panel-success" : "panel-danger"}")}
				.panel-heading.subtitle-center
					.panel-title
						Saldo
				.panel-body.subtotal.text-center
					= number_to_currency(saldo , :unit => "$", :separator => ",", :delimiter => ".")
